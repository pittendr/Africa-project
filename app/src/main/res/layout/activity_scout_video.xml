<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BFD584"
    android:weightSum = "3"
    android:gravity="center">


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2.75">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/askIfPlanting"
            android:background="@drawable/scoutvid"/>

        <ImageView
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_marginTop="100dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/fade"
            android:background="@drawable/fade"
            android:visibility="invisible"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Do you want to repeat?"
            android:textColor="#000000"
            android:id="@+id/textView"
            android:layout_marginTop="100dp"
            android:layout_gravity="center_horizontal"
            android:visibility="invisible"/>

        <VideoView

            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_marginTop="100dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/scoutVideo"/>

        <ImageButton
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/yesButton2"
            android:background="@drawable/yesbutton2"
            android:onClick="yesScoutClick"
            android:layout_marginTop="410dp"
            android:layout_marginLeft="10dp"
            android:visibility="invisible"/>

        <ImageButton
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/noButton2"
            android:background="@drawable/nobutton2"
            android:onClick="noScoutClick"
            android:layout_marginTop="410dp"
            android:layout_marginLeft="100dp"
            android:visibility="invisible"/>

    </FrameLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:scaleType="fitXY"
        android:src="@drawable/bottom"
        >
    </ImageView>

</LinearLayout>