<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BFD584"
    android:weightSum = "3"
    android:gravity="center">
    
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2.25">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/askIfPlanting"
            android:background="@drawable/flowers"/>

        <ImageButton
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/flowerAudio"
            android:background="@drawable/audio"
            android:onClick="toggleFlowerAudio"
            android:layout_marginTop="320dp"
            android:layout_marginLeft="25dp" />


    </FrameLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="2"
        >

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#93B0D2">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/yesButton"
                android:src="@drawable/yes"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:padding="0dp"
                android:onClick="yesPlantClick"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#D83D3E">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/noButton"
                android:src="@drawable/no"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:padding="0dp"
                android:onClick="noPlantClick"/>


        </FrameLayout>

    </LinearLayout>

</LinearLayout>