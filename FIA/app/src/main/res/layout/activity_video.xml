<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BFD584">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAlignBottom="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/bottom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottom"
        >
    </ImageView>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/askIfPlanting"
            android:background="@drawable/scoutvid"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/bottom"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_marginLeft="10dp"
            android:paddingBottom="0dp"
            android:id="@+id/menuBar">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/home"
                android:background="@drawable/home"
                android:adjustViewBounds="true"
                android:layout_alignParentLeft="true"
                android:scaleType="fitXY"
                android:onClick="homeClick"
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/search"
                android:layout_toRightOf="@+id/home"
                android:visibility="invisible"
                android:textColor="#000000"
                android:id="@+id/searchInput" />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:id="@+id/search"
                android:background="@drawable/search"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:onClick="searchClick"
                />



        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="40sp"
            android:text="Do you want to repeat?"
            android:textColor="#000000"
            android:id="@+id/textView"
            android:layout_below="@+id/menuBar"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="16dp"
            android:visibility="invisible"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/menuBar"
        android:layout_above="@+id/space">

        <VideoView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:id="@+id/scoutVideo"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="89dp"
        android:layout_above="@+id/space"
        android:id="@+id/mediacontroller"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="237dp"
        android:layout_above="@id/bottom"
        android:id="@+id/space"/>



        <ImageButton
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/yesButton2"
            android:background="@drawable/yesbutton2"
            android:onClick="yesVideoClick"
            android:layout_marginLeft="10dp"
            android:visibility="invisible"
            android:layout_above="@+id/bottom"/>

        <ImageButton
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/noButton2"
            android:background="@drawable/nobutton2"
            android:onClick="noVideoClick"
            android:layout_marginLeft="100dp"
            android:visibility="invisible"
            android:layout_above="@+id/bottom"/>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView"
            android:background="@drawable/customshape"
            android:layout_below="@+id/menuBar"
            android:divider="#ffffff"
            android:dividerHeight="1px"
            android:choiceMode="singleChoice"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:visibility="invisible"
            android:fastScrollEnabled="true"
            android:layout_above="@id/bottom"
            android:layout_marginBottom="16dp"
            />

    </RelativeLayout>





